<div class="comments-box">
  <p>
    this post has <%= @comments.count %> comments
    <% if @comments.count == 0 %>
      , go ahead and be the first one.
    <%end%>
  </p>
  <% @comments.each do |comment| %>

      <div class="comment">
        <p class="comment-user"><b><%= comment.user.username %></b> - <%= comment.created_at.strftime('%Y-%m-%d %H:%M') %></p>
        <p class="comment-text"><%= comment.comment %></p>
      </div>

  <% end %>
</div>