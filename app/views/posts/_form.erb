<%= form_for @post do |f| %>
    <fieldset class="form-group">
      <%= f.label(:title, class: 'form-label') %>
      <%= f.text_field(:title, class: 'form-text') %>
    </fieldset>
    <fieldset class="form-group">
      <%= f.label(:body, class: 'form-label') %>
      <%= f.text_area(:body, class: 'form-textarea') %>
    </fieldset>
    <fieldset class="form-group">
      <%= f.submit(class: 'btn btn-primary') %>
    </fieldset>

<% end %>